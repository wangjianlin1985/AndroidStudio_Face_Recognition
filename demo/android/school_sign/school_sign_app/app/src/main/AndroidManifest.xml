<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="lewis.com.sign">
    <!--允许联网 -->
    <uses-permission android:name="android.permission.REQUEST_INSTALL_PACKAGES" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-feature android:name="android.hardware.camera.autofocus" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.FLASHLIGHT" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <!--获取GSM（2g）、WCDMA（联通3g）等网络状态的信息  -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!--获取wifi网络状态的信息 -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <!--保持CPU 运转，屏幕和键盘灯有可能是关闭的,用于文件上传和下载 -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <!--获取sd卡写的权限，用于文件上传和下载-->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!--允许读取手机状态 用于创建BmobInstallation-->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <application
        android:name="lewis.com.sign.base.DemoApplication"
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/net"
        android:roundIcon="@drawable/logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="lewis.com.sign.MainActivity">

        </activity>
        <activity android:name="lewis.com.sign.ui.act.LoginActivity" />

        <activity android:name="lewis.com.sign.ui.act.WelcomAct" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="lewis.com.sign.ui.act.UserInfoAct" />
        <activity android:name="lewis.com.sign.ui.act.AboutAct" />
        <activity android:name="lewis.com.sign.ui.act.SetAct" />
        <activity android:name=".ui.act.XuankeAct" />
        <activity android:name=".ui.act.KechengListAct" />
        <activity android:name=".ui.act.SignAct" />
        <activity android:name=".ui.act.RecordAct" />
        <activity android:name=".ui.act.SignRecordAct" />
        <activity android:name=".ui.act.KechengTjAct" />
        <activity android:name=".ui.act.SignTjAct" />
        <activity android:name=".ui.act.ChartAct" />
    </application>

</manifest>